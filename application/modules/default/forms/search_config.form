[search_config]
method = "post"
action = "/config/search"

elements.search_backend.type = "select"
elements.search_backend.options.label = "Backend"
elements.search_backend.options.multiOptions.solr = "Solr"
elements.search_backend.options.multiOptions.zend_search_lucene = "Zend"
elements.search_backend.options.required = true
elements.search_backend.options.tooltip = "<p><b>Solr:</b> A third party search backend that is faster and has more features than Zend, but requires additional software and is more complex to configure.</p><p><b>Zend:</b> A simple backend that uses local file storage. It is slower and less powerful than Solr, but requires very little configuration. Zend is the default backend because it does not rely on any third party software.</p><p>Whenever you change search backends, you will need to re-index all of your content. See the administrator manual for more details.</p>"
displayGroups.general.elements.search_backend = "search_backend"

elements.search_solr_host.type = "text"
elements.search_solr_host.options.label = "Solr Host"
elements.search_solr_host.options.tooltip = "<p>The name or IP of the host which is running Solr. This can also be 'localhost' if Solr is running on the same server.</p><p><em>This value is ignored when using the Zend backend.</em></p>"
displayGroups.general.elements.search_solr_host = "search_solr_host"

elements.search_solr_port.type = "text"
elements.search_solr_port.options.label = "Solr Port"
elements.search_solr_port.options.tooltip = "<p>The port that Solr is accepting connections on.</p><p><em>This value is ignored when using the Zend backend.</em></p>"
displayGroups.general.elements.search_solr_port = "search_solr_port"

elements.search_solr_path.type = "text"
elements.search_solr_path.options.label = "Solr Path"
elements.search_solr_path.options.tooltip = "<p>The path that Solr is running within its container (i.e. Tomcat or Jetty).</p><p><em>This value is ignored when using the Zend backend.</em></p>"
displayGroups.general.elements.search_solr_path = "search_solr_path"

elements.saveSearchConfiguration.type = "Form_Button_Submit"
elements.saveSearchConfiguration.options.label = "Save"
displayGroups.general.elements.saveSearchConfiguration = "saveSearchConfiguration"
