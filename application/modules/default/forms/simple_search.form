; The username, password, and ldap fields are all defined here for the sake of
; simplicity, but at runtime the account controller will strip out the fields
; which do not apply to the current authentication schema (ldap or database)

[simple_search]

elements.searchType.type = "hidden"
elements.searchType.options.value = "simple"

elements.keywords.type = "text"
elements.keywords.options.attribs.size = 25
elements.keywords.options.attribs.title = "Keyword Search"

elements.search.type = "Form_Button_Submit"
elements.search.options.label = "Search"

elements.columns.type = "Form_Button"
elements.columns.options.onClickFunction = "Fisma.Search.toggleSearchColumnsPanel"
elements.columns.options.label = "Columns"

elements.advanced.type = "Form_Button"
elements.advanced.options.onClickFunction = "Fisma.Search.toggleAdvancedSearchPanel"
elements.advanced.options.label = "Advanced"
