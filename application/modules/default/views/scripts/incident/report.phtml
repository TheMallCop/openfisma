<script type="text/javascript">
    // Browsers will trigger the first submit button on the page (which is "Cancel Report") if a user
    // presses Enter, so we have this little hack to trigger the "Continue" button instead.
    YAHOO.util.Event.onDOMReady(function () {
        var form = document.getElementById("incident_wizard");

        if (form) {
            YAHOO.util.Event.on(form, "keypress", function (e) {
                if ((e.which && e.which == 13) || (e.keyCode && e.keyCode == 13)) {
                    var forwardButton = document.getElementById('irReportForwards-button');

                    if (forwardButton) {
                        forwardButton.click();
                        YAHOO.util.Event.preventDefault(e);
                    }
                }
            });
        }
    });
</script>

