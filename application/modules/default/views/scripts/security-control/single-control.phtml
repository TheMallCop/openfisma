<table class="keyValues">
    <tr>
        <td width="200">
            <div>
                ID:
            </div>
        </td>
        <td>
            <?php echo $this->escape($this->securityControl->code); ?>
        </td>
    </tr>
    <tr>
        <td>Catalog: </td>
        <td><?php echo $this->escape($this->securityControl->Catalog->name)?></td>
    </tr>
    <tr>
        <td>Category:</td>
        <td><?php echo $this->escape($this->securityControl->family)?></td>
