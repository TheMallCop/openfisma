    <tr>
        <td>Name:</td>
        <td><?php echo $this->escape($this->securityControl->name)?></td>
    </tr>
    <tr>
        <td>Description:</td>
        <td><?php echo $this->escape($this->securityControl->control, 'none')?></td>
