[securityauthorizationaddenhancements]
method = "post"
elementFilters.trim = "StringTrim"

elements.securityControlEnhancementIds.type = "MultiCheckbox"
elements.securityControlEnhancementIds.options.label = "Security Control Enhancements"
elements.securityControlEnhancementIds.options.hideLabel = true
elements.securityControlEnhancementIds.options.escape = false
displayGroups.sa.elements.securityControlEnhancementIds = "securityControlEnhancementIds"

elements.save.type = "Submit"
elements.save.options.label = "Add"
displayGroups.sa.elements.save = "save"

