[state_transitions]
method = "post"
action = "/vm/vulnerability/change-state"

elements.id.type = "hidden"

elements.acceptRisk.type = "Form_Button_Submit"
elements.acceptRisk.options.label = "Accept This Risk"

elements.falsePositive.type = "Form_Button_Submit"
elements.falsePositive.options.label = "Identify False Positive"

elements.close.type = "Form_Button_Submit"
elements.close.options.label = "Close"
