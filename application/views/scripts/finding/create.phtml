<script>
$(document).ready(function(){
	var myDate = new Date();
	var Year   = myDate.getFullYear();
	var Month  = myDate.getMonth() + 1;
	if (Month < 10) {
		Month = '0'+Month;
	}
	var Day = myDate.getDate();
	if (Day < 10) {
		Day = '0' + Day;
	}
	var currentDate = Year + Month + Day;
	$("#discover_ts").val(currentDate);

    $("select[name='system_id']").change(function(){
        searchAsset();
    });

    $("#search_asset").click(function(){
        searchAsset();
    }).trigger('click');

	function searchAsset( ){
    	var trigger = $("select[name='system_id']");
	    var sys = trigger.children("option:selected").attr('value');
	    var param =  '';
    	if( null != sys){
        	param +=  '/sid/' + sys;
	    }
    	$("input.assets").each(function(){
        	if( $(this).attr('value') ){
            	param += '/' + $(this).attr('name') + '/' + $(this).attr('value');
	        }
    	});
		var url = '/asset/search' + param;
    	$("select[name='asset_id']").load(url,null,function(){
        	asset_detail();
	    });
	}

	function asset_detail() {
    	$("select[name='asset_id']").change(function(){
			var url = "/asset/detail/id/" + $(this).children("option:selected").attr("value");
        	$("div#asset_info").load(url,null);
    	});
	}
});
</script>

