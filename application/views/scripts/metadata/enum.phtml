<option></option>
<?php
foreach ($this->enumValues as $value):
    if ($value == $this->selectedValue):
        $selected = 'selected="selected"';
    else:
        $selected = '';
    endif;
?>
    <option value="<?php echo $value; ?>" <?php echo $selected; ?>>
        <?php echo $value; ?>
    </option>
<?php
endforeach;
?>