foreach ($this->enumValues as $value):
    if ($value == $this->selectedValue):
        $selected = 'selected="selected"';
    else:
        $selected = '';
    endif;
?>
    <option value="<?=$this->escape($value) ?>" <?=$this->escape($selected, 'none') ?>>
        <?php echo $this->escape($value); ?>
    </option>
<?php
endforeach;
?>
